{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Enrichers.ClientInfo",
      "Serilog.Sinks.Async"
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "WithEnvironmentUserName",
      "WithClientIp",
      "WithClientAgent",
      "WithDemystifiedStackTraces"
    ],
    "Properties": {
      "Application": "Nomis.Web.Server"
    },
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Information",
        "Microsoft": "Error",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level}] {Message}{NewLine:1}{Exception}"
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Seq",
              "Args": {
                "serverUrl": "http://localhost:5341"
              }
            },
            {
              "Name": "WithClientIp",
              "Args": {
                "xForwardHeaderName": "X-Forwarded-For"
              }
            }
          ]
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "NomisDb": "Host=localhost;Port=5432;Database=NomisDb;Username=postgres;Password=root;Include Error Detail=true;"
  }
}